extends layout

block content

  if error
    div.row
      div.col-md-12
        div.alert.danger
          p= error

  if message
    div.row
      div.col-md-12
        div.alert.success
          p= message

  div.row
    div.col-md-12
      form(method='POST' action='/users/edit-profil')
        div.form-group
          label(for='bio') Bio
          textarea.form-control(id='bio' name='bio' placeholder='Bio')
        button.btn.btn-primary(type='submit') Edit profil



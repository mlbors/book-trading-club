if (books && books.length)
  div(id='books-list' class='grid')
    div.grid-sizer
    each book in books
      div(class='grid-item')
        img(src=book.image)
        h3= book.tite
        p= book.description
        p= book.isbn
        if auth && book.user === user
          a(class='btn btn-primary' href='books/edit/' + book.title) Edit
          a(class='btn btn-danger' href='books/delete/' + book.title) Delete
        if auth && book.user !== user
          a(class='btn btn-primary' href='trades/create/' + book.title) Make a trade
else
  p No books!
extends layout

block content

  div.row
    div.col-md-12
      h1= title

  if error
    div.row
      div.col-md-12
        div.alert.danger
          p= error

  if message
    div.row
      div.col-md-12
        div.alert.success
          p= message

  div.row
    div.col-md-12
      form(method='POST' action='/trades/add')
        div.form-group
          label(for='title') Title
          input.form-control(type='text' id='title' name='title' placeholder='Title')
        div.form-group
          label(for='description') Description
          textarea.form-control(id='description' name='description' placeholder='Description')
        input.form-control(type='hidden' id='book' name='book' value=book)
        button.btn.btn-primary(type='submit') Submit trade


